<h1>Show (1 task)</h1>

<h2> <%= @task.title %> </h2>
<p> <%= @task.details %> </p>
<p> <%= @task.completed %> </p>

<%= link_to "Delete",
  task_path(@task.id),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>

<%= link_to "Edit",
  edit_task_path(@task.id),
  data: {turbo_method: :delete, turbo_confirm: "Editing..."}
%>

<%= link_to "Index",
  tasks_path(@tasks),
  data: {turbo_method: :delete, turbo_confirm: "Going back..."}
%>
